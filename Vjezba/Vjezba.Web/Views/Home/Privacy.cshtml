@{
	ViewData["Title"] = "Privacy Policy";
	string lang = ViewBag.Lang;
	string poruka;

	switch (lang)
	{
		case "en":
			poruka = "Jezik je engleski";
			break;
		case "hr":
			poruka = "Jezik je hrvatski";
			break;
		case "de":
			poruka = "Jezik je njemački";
			break;
		case "zh":
			poruka = "Jezik je kineski";
			break;
		default:
			poruka = "Nije odabran podržani jezik";
			break;
	}
}
<h1>@ViewData["Title"]</h1>
<h2>@poruka</h2>

<p>Use this page to detail your site's privacy policy.</p>

<div class="row">
	<div class="col-md-4">
		<a class="btn btn-lg btn-primary" asp-action="FAQ" asp-route-selected="2">FAQ - Selektiran odgovor 2</a>
	</div>
	<div class="col-md-4">
		<a class="btn btn-lg btn-danger" asp-action="FAQ">FAQ</a>
	</div>
</div>